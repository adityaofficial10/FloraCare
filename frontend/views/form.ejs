  <br>
  <input type="text"  name="postTitle" />
  <br>
  <label for="postContent">Active Seasons:</label>
  <br>
  <textarea name="myInput" cols="60" rows="2" minlength="20" maxlength="500"  required></textarea>
  <br>
  <label for="postContent">Active From:</label>
  <br>
  <textarea name="myInput" cols="60" rows="2" minlength="20" maxlength="500"  required></textarea>
  <br>
  <label for="postContent">Manure/Fertilizer:</label>
  <br>
  <textarea name="myInput" cols="60" rows="2" minlength="20" maxlength="500"  required></textarea>
  <br>
  <label for="postContent">Diseases Susceptible To:</label>
  <br>
  <textarea name="myInput" cols="60" rows="2" minlength="20" maxlength="500"  required></textarea>
